<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:widgetLayout="@android:layout/preference_category">

    <PreferenceCategory android:title="Visualizacion">

        <SwitchPreference
            android:defaultValue="false"
            android:key="available_players"
            android:title="View only available players" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="hide_surname"
            android:title="Hide surname" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Restrictions">

        <SwitchPreference
            android:defaultValue="false"
            android:key="restrict"
            android:title="Restrict options to modify and delete" />
    </PreferenceCategory>
</PreferenceScreen>